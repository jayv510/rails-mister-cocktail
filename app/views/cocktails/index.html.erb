<div class="wrapper-2">

<div class="container">

<div class="banner" style="background-image: url('http://webneel.com/wallpaper/sites/default/files/images/07-2014/21-black-wallpaper.jpg');">
  <div class="banner-content">
    <h1></h1>
    <p></p>
  </div>
</div>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
          <%= link_to cocktail_path(cocktail) do%>
        <div class="card" style="background-image: linear-gradient(45deg, rgba(0,0,0,0.95) 20%,rgba(0,0,0,0) 100%), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
          <div class="card-category"></div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
        </div>
        <% end %>
    </div>
      <% end %>
  </div>
</div>


<%= link_to "Add a new cocktail", new_cocktail_path%>

</div>
