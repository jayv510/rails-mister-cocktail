        <ul>
          <p><strong>Recipe:</strong></p>
          <% @doses.each do |dose| %>
          <li><%= dose.description%> - <%= dose.ingredient.name %> -
          <%= link_to dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
              <i class="far fa-trash-alt"></i>
              <% end %>
          <% end %>
          </li>
        </ul>
