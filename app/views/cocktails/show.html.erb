
<div class ="wrapper">
  <div class ="container">
    <div class= "row">
      <div class="col-xs-12 col-sm-6">
        <h2><%= @cocktail.name %></h2>
        <%= link_to "Delete this listing", cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

        <%= link_to "Add a recipe", new_cocktail_dose_path(@cocktail)%>

        <br>
        <%= link_to "Back", cocktails_path %>

        <ul>
          <strong>Doses:</strong>
          <% @doses.each do |dose| %>
          <li><%= dose.description%> - <%= dose.ingredient.name %></li>
          <br>

          <%= link_to "Delete", dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
