    <div class= "row">
        <div class = "frame2">
      <div class="col-xs-12 col-sm-6">
        <div class= "cocktail-info">
        <h4><%= @cocktail.name %></h4>
        <%= link_to "» Delete this listing", cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        <br>
